<script id="building_space_port_view_item">
<![CDATA[
<li style="margin-top: 3px; line-height: normal;">
  <div style="margin-bottom: 2px">
    <div class="fleet_view_first" >
      <img src="<%= assetsUrl %>/ships/<%= fleet.details.type %>.png" title="<%= fleet.details.type_human %>" style="width: 115px; height: 115px;">
    </div>
    <div class="fleet_view_summary">
      <span style="font-weight: bold;"><%= fleet.details.type_human %>:</span>
      <span style="font-weight: bold;"><%= fleet.task %>:</span>
<% if (fleet.task == 'Travelling') { %>
      <table>
        <tr><td>From:</td><td><%= fleet.from.name %></td></tr>
        <tr><td>To:</td><td><%= fleet.to.name %></td></tr>
        <tr><td>Arrives in:</td><td>12:43:05</td></tr>
        <tr><td>Arrives at:</td><td><%= Library.formatTime(fleet.date_arrives) %></td></tr>
      </table>
<% } %>
    </div>
    <div class="fleet_view_summary">
      <dl>
        <dt><span>Speed:</span></dt>        <dd><%= Library.formatNum(fleet.details.speed) %></dd>
        <dt><span>Hold Size:</span></dt>    <dd><%= Library.formatNum(fleet.details.hold_size) %></dd>
        <dt><span>Berth Level:</span></dt>  <dd><%= Library.formatNum(fleet.details.berth_level) %></dd>
        <dt><span>Occupants:</span></dt>    <dd><%= fleet.details.max_occupants %></dd>
        <dt><span>Stealth:</span></dt>      <dd><%= Library.formatNum(fleet.details.stealth) %></dd>
        <dt><span>Combat:</span></dt>       <dd><%= Library.formatNum(fleet.details.combat) %></dd>
      </dl>
    </div>
    <div class="fleet_view_summary">
      <table>
        <tr><th colspan>Payload:</th></tr>
      </table>
    </div>
    <div class="clear_float"></div>
  </div>
</li>
]]>
</script>

